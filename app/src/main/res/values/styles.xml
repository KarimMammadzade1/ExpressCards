<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardnamestyle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="lineSpacing">2dp</item>
        <item name="fontFamily"> @font/proximanovaaltbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor"> @color/black</item>
    </style>
    <style name="cardpanstyle" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="lineSpacing">2dp</item>
        <item name="fontFamily"> @font/proximanovaaltlregular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor"> @color/black</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="carddetailsquantitytextstyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/proximanovaaltbold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="carddetailsquantitysubtextstyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#F58220</item>
        <item name="fontFamily">@font/proximanovaaltlight</item>
    </style>
</resources>