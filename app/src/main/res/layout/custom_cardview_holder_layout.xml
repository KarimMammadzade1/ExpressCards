<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardRootView"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="80dp">

    <ImageView
        android:layout_marginStart="16dp"
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/expressocard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardNameText"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/cardNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expresso MC"
        style="@style/cardnamestyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardPanText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardImage"
        app:layout_constraintTop_toTopOf="parent"
  />

    <TextView
        android:id="@+id/cardPanText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/cardpanstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dropdownArrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardNameText"
        app:layout_constraintTop_toTopOf="parent"
        android:text="** 4554" />

    <ImageView
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/dropdownArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/dropdownarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>