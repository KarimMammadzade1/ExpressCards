<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomrootview"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/expressocard"
        android:id="@+id/bottom_card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="15dp"
       app:layout_constraintTop_toTopOf="@id/bottom_card_image"
        app:layout_constraintBottom_toBottomOf="@id/bottom_card_image"
        app:layout_constraintStart_toEndOf="@id/bottom_card_image"
        android:id="@+id/cardNamebottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expresso MC"
        style="@style/cardnamestyle"

        />


</androidx.constraintlayout.widget.ConstraintLayout>